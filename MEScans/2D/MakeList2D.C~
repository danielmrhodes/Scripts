void MakeList2D() {

  const double x_ll = -1.5;
  const double x_ul = 0.0;
  const int x_st = 10;
  const int np = 8;
  
  const double y_ll = 0.9;
  const double y_ul = 1.3;
  const int y_st = 81;

  double dx = (x_ul-x_ll)/(double)(x_st*np);
  double dy = (y_ul-y_ll)/(double)(y_st-1);
  
  int num = x_st*y_st;
  int num1 = num + y_st;

  std::cout << "\nTotal Scan: " << np-1 << " " << x_st << "x" << y_st << " surfaces (" << num 
	    << " points), 1 " << x_st + 1 << "x" << y_st << " surface (" << num1 << " points)\n"
	    << "X axis: [" << x_ll << "," << x_ul  << "] in " << x_st*np + 1 
	    << " steps (step = " << dx << ")\n"
	    << "Y axis: [" << y_ll << "," << y_ul << "] in " 
	    << y_st << " steps (step = " << dy << ")\n" << std::endl;
  
  std::ofstream file;
  for(int k=0;k<np;k++) {

    int xn = x_st;
    if(k==np-1) {
      xn += 1;
    }
    
    file.open(Form("list%i.txt",k+1),std::ios::out);
    for(int i=0;i<xn;i++) {
      for(int j=0;j<y_st;j++) {
	file << x_ll + (i + k*x_st)*dx << " " << y_ll + j*dy << "\n";
      }
    }
    file.close();
    
  }
  
  return;
}
